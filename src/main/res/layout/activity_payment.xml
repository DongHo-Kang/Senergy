<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".Payment"
    android:background="#00FFFFFF"
    android:name=".main.popupActivity"
    android:theme="@style/DialogTheme">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="395dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/information_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="-300dp"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="-280dp"
        app:srcCompat="@drawable/visa" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:text="Visa 5566"
        android:textColor="#000000" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-130dp"
        android:layout_marginTop="250dp"
        android:text="OTHER PAYMENT METHODS"
        android:textColor="#43000000" />

    <ImageView
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-230dp"
        android:layout_marginTop="300dp"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/image_apply_pay"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-288dp"
        android:layout_marginTop="310dp"
        app:srcCompat="@drawable/apple_pay" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="289dp"
        android:layout_height="37dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/round_corner"
        android:text="Pay       $125.60"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

</LinearLayout>